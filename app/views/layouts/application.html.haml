!!!
%html{ :lang => "en" }
  %head
    %title Matty Fagioli
    -# META DATA
    = csrf_meta_tags
    %meta{ :charset => "utf-8" }
    %meta{ :content => "width=device-width, initial-scale=1, maximum-scale=1", :name => "viewport" }
    -# FONTS | Lato, Quicksand, Raleway
    = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Lato:300,400,700|Quicksand:300,400,700|Raleway:300,400,700'
    -# STYLESHEETS
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css'
    -# JAVASCRIPTS
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js'
    -# FAVICON
    = favicon_link_tag 'favicon.ico'
  %body= yield
